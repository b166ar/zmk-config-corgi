#define SYMB    2
#define NUMB    3
#define CONF    4

/ {

behaviors {
        hm: homerow_mods {
            compatible = "zmk,behavior-hold-tap";
            label = "HOMEROW_MODS";
            #binding-cells = <2>;
            tapping-term-ms = <200>;
            quick-tap-ms = <0>;
            flavor = "tap-preferred";
            bindings = <&kp>, <&kp>;
        };
    };


};
        keymap {
                compatible = "zmk,keymap";


        default_layer {
